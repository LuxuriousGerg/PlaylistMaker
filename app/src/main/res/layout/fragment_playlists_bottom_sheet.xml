<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp"
    android:paddingTop="42dp"
    android:background="@drawable/bottom_sheet_bg">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvBottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_to_playlist"
        android:textAlignment="center"
        android:textSize="19sp"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/buttonText2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_new_playlist"
        style="@style/RoundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/new_playlist_button"
        android:textSize="@dimen/media_button"
        android:layout_gravity="center_horizontal"/>

    <!-- Список плейлистов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylistsBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

</LinearLayout>
