<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="0dp"
    android:background="@color/backgroundPrimary">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/settings_title"
        android:titleTextAppearance="@style/ToolbarTitleText"
        app:navigationIcon="@drawable/arrow"
        app:navigationIconTint="@color/arrow"
        app:titleTextColor="@color/buttonText2" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_text_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/paddingHorizontal"
        android:paddingVertical="@dimen/paddingVertical"
        android:text="@string/dark_theme"
        android:textColor="@color/buttonText2"
        android:textSize="@dimen/text_size_mini"
        android:thumbTintMode="screen"
        app:thumbTint="@color/switch_thumb_selector"
        app:trackTint="@color/switch_track_selector"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_share_app"
        style="@style/SettingsButtonStyle"
        android:text="@string/share_app"
        android:drawableEnd="@drawable/share" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_support"
        style="@style/SettingsButtonStyle"
        android:text="@string/contact_support"
        android:drawableEnd="@drawable/call" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_terms"
        style="@style/SettingsButtonStyle"
        android:text="@string/terms_of_use"
        android:drawableEnd="@drawable/vector" />

</LinearLayout>


